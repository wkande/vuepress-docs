/* START sidebar changes */

/* Default size for all DOCS unser a DIVIDER */
section.sidebar-group.depth-0 a.sidebar-link{
  font-size:small;
}

/* Default size for all DOCS unser a GROUP */
section.sidebar-group.collapsable.is-sub-group.depth-1 a.sidebar-link{
  font-size:samll;
}

/* DIVIDER */
section.sidebar-group.depth-0 p.sidebar-heading{
  color:darkpurple !important;
}

/* DOC under a DIVIDER */
section.sidebar-group.depth-0  ul.sidebar-links.sidebar-group-items a.active.sidebar-link{
  color:black !important;
  border-left:4px solid #7CE3CB !important;
  background-color:#7CE3CB;
}

/* GROUP under a DIVIDER */
section.sidebar-group.collapsable.is-sub-group.depth-1 p.sidebar-heading{
  cursor: pointer !important;
  color:darkpurple !important;
  opacity: 1;
  font-size:11pt;
}

/* DOC under a GROUP */
section.sidebar-group.collapsable.is-sub-group.depth-1  ul.sidebar-links.sidebar-group-items a.active.sidebar-link{
  color:black !important;
  background-color:#7CE3CB;
  border-left:4px solid #7CE3CB !important;
  margin-left:-16px;
  width:400px !important;
  padding-left:44px;
  font-size:small !important;
}

.sidebar{
  border-right:solid 1px lightgrey;
}

/* END sidbar changes */
